doctype html
html(lang="es")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        title Raspi
        meta(name="viewport", content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=0")
        meta(name="mobile-web-app-capable", content="yes")
        link(rel="icon", type="image/png", href="/favicon.png")
        link(rel="icon", sizes="196x196", href="/ic_launcher_raspi_196.png")
        link(rel="icon", sizes="128x128", href="/ic_launcher_raspi_128.png")
        
        link(rel="stylesheet", href='http://fonts.googleapis.com/css?family=Roboto:400,500', type='text/css')
        link(rel="stylesheet", href="/css/app.css")
    body
        div.list.js-list
            header
                a.action.left.js-open-menu(href="#")
                    i.sp.sp-action.sp-menu
                a.action.right.js-open-player(href="#")
                    i.sp.sp-action.sp-player
                h1 Playlists
            div.content.cf
                each pl in app.playlists
                    a.list-item.js-list-item(href=pl.link, style="background-image: url('"+pl.image+"')")
                        div.info
                            i.sp.sp-fade
                            em= pl.name
        div.overlay.js-overlay
        div.menu.js-menu .
        div.search.js-search
            header
                a.action.left.js-close-player(href="#")
                    i.sp.sp-action.sp-close
                h1 Buscar
            div.content.cf ---
        div.player.js-player(class=app.player.playing ? 'active' : '')
            div.cover
                img.js-album-art(src="http://houbi.com/belpop/media/hooverphonic.jpg")
                a.js-control-play(href="#")
                    i.sp.sp-play
                a.js-control-pause(href="#")
                    i.sp.sp-pause
            div.info
                i.sp.sp-random
                div.label.song.js-song(id=app.player.nowplaying.id)= app.player.nowplaying.song
                div.label.duration.js-duration= (app.player.nowplaying.duration/60)
                div.label.artist.js-artist= app.player.nowplaying.artist

        script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
        script window.jQuery || document.write('<script src="/js/jquery-1.11.0.min.js"><\/script>')
        script(src="/js/app.js")
